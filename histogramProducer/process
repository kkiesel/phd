#!/bin/bash -e

infiles=(
/user/kiesel/nTuples/V04/QCD_HT700to1000_nTuple.root
/user/kiesel/nTuples/V04/WJetsToLNu_HT-200To400_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT500to700_nTuple.root
/user/kiesel/nTuples/V04/TTJets_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT1000to1500_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT1500to2000_nTuple.root
/user/kiesel/nTuples/V04/WJetsToLNu_HT-600To800_nTuple.root
/user/kiesel/nTuples/V04/GJets_HT-600ToInf_nTuple.root
/user/kiesel/nTuples/V04/WGToLNuG_PtG-500_nTuple.root
/user/kiesel/nTuples/V04/TTGJets_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT2000toInf_nTuple.root
/user/kiesel/nTuples/V04/WJetsToLNu_HT-800To1200_nTuple.root
/user/kiesel/nTuples/V04/GJets_HT-400To600_nTuple.root
/user/kiesel/nTuples/V04/SinglePhoton_RunD-05Oct2015_nTuple.root
/user/kiesel/nTuples/V04/WJetsToLNu_HT-600ToInf_nTuple.root
/user/kiesel/nTuples/V04/ZJetsToNuNu_HT-600ToInf_nTuple.root
/user/kiesel/nTuples/V04/WJetsToLNu_HT-400To600_nTuple.root
/user/kiesel/nTuples/V04/WJetsToLNu_HT-2500ToInf_nTuple.root
/user/kiesel/nTuples/V04/WJetsToLNu_HT-1200To2500_nTuple.root
/user/kiesel/nTuples/V04/GJets_HT-200To400_nTuple.root
/user/kiesel/nTuples/V04/DYJetsToLL_M-50_nTuple.root
/user/kiesel/nTuples/V04/SinglePhoton_PromptReco-v4_nTuple.root
/user/kiesel/nTuples/V04/ZJetsToNuNu_HT-400To600_nTuple.root
/user/kiesel/nTuples/V04/MET_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT300to500_nTuple.root
/user/kiesel/nTuples/V04/JetHT_PromptReco-v4_nTuple.root
/user/kiesel/nTuples/V04/JetHT_05Oct2015_nTuple.root
/user/kiesel/nTuples/V04/WGToLNuG_madgraphMLM_nTuple.root
/user/kiesel/nTuples/V04/WGToLNuG_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT100to200_nTuple.root
/user/kiesel/nTuples/V04/ZJetsToNuNu_HT-200To400_nTuple.root
/user/kiesel/nTuples/V04/WJetsToLNu_HT-100To200_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT200to300_nTuple.root
/user/kiesel/nTuples/V04/GJets_HT-100To200_nTuple.root
/user/kiesel/nTuples/V04/GJet_Pt-15ToInf_nTuple.root
/user/kiesel/nTuples/V04/GJets_HT-40To100_nTuple.root
/user/kiesel/nTuples/V04/ZJetsToNuNu_HT-100To200_nTuple.root
)
infiles=(
/user/kiesel/nTuples/V04/QCD_HT700to1000_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT500to700_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT1000to1500_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT1500to2000_nTuple.root
/user/kiesel/nTuples/V04/GJets_HT-600ToInf_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT2000toInf_nTuple.root
/user/kiesel/nTuples/V04/GJets_HT-400To600_nTuple.root
/user/kiesel/nTuples/V04/SinglePhoton_RunD-05Oct2015_nTuple.root
/user/kiesel/nTuples/V04/GJets_HT-200To400_nTuple.root
/user/kiesel/nTuples/V04/SinglePhoton_PromptReco-v4_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT100to200_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT300to500_nTuple.root
/user/kiesel/nTuples/V04/QCD_HT200to300_nTuple.root
/user/kiesel/nTuples/V04/JetHT_PromptReco-v4_nTuple.root
/user/kiesel/nTuples/V04/JetHT_05Oct2015_nTuple.root
/user/kiesel/nTuples/V04/GJets_HT-100To200_nTuple.root
/user/kiesel/nTuples/V04/GJet_Pt-15ToInf_nTuple.root
/user/kiesel/nTuples/V04/GJets_HT-40To100_nTuple.root
)
# run with no input file first, to compile all versions
root -b -l -q run.C\(\"0\"\)

# determine the number of cores(processes) which will be used
nCores=$(expr `nproc` - 1)

# start the submittion, and end if all jobs are submitted
while [ ${#infiles[@]} -ne 0 ]; do
  sleep 1

  # find out how many root processer are running
  nProcRunning=$(ps hu -C "root -b -l -q run.C"|wc -l)
  if [ "$nProcRunning" -lt "$nCores" ]; then
    root -b -l -q run.C\(\"${infiles[0]}\"\) &
    infiles=( ${infiles[@]:1:99} )
  fi

done

# after all jobs are sumbitted, monitor the jobs still running
while [[ $(ps hu -C "root -b -l -q run.C") ]]; do
  sleep 1
done

echo "DONE"
